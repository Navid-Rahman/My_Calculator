<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/black"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="7">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:gravity="bottom|right"
            android:textColor="#F2F2F2"
            android:textSize="30dp"
            android:layout_weight="2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            >

            <Button
                android:id="@+id/buttonClear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:backgroundTint="#7F8487"
                android:onClick="Clear"
                android:text="Clear"
                android:textSize="20dp" />

            <Button
                android:id="@+id/buttonDelete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#7F8487"
                android:onClick="delete"
                android:text="Delete"
                android:textSize="20dp" />

        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:orientation="horizontal"
            android:columnCount="4"
            android:rowCount="5"
            android:useDefaultMargins="true"
            android:layout_weight="4"
            >

            <Button
                android:id="@+id/buttonSeven"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:backgroundTint="#7F8487"
                android:onClick="numSeven"
                android:text="7"
                android:textSize="20dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                />

            <Button
                android:id="@+id/buttonEight"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:backgroundTint="#7F8487"
                android:onClick="numEight"
                android:text="8"
                android:textSize="20dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"/>

            <Button
                android:id="@+id/buttonNine"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:backgroundTint="#7F8487"
                android:onClick="numNine"
                android:text="9"
                android:textSize="20dp"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"/>

            <Button
                android:id="@+id/buttonDivide"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:backgroundTint="#F66B0E"
                android:onClick="Divide"
                android:text="/"
                android:textSize="20dp"
                android:layout_row="0"
                android:layout_column="3"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"/>

            <Button
                android:id="@+id/buttonFour"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:backgroundTint="#7F8487"
                android:onClick="numFour"
                android:text="4"
                android:textSize="20dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"/>

            <Button
                android:id="@+id/buttonFive"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:backgroundTint="#7F8487"
                android:onClick="numFive"
                android:text="5"
                android:textSize="20dp"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"/>

            <Button
                android:id="@+id/buttonSix"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:backgroundTint="#7F8487"
                android:onClick="numSix"
                android:text="6"
                android:textSize="20dp"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"/>

            <Button
                android:id="@+id/buttonMultiply"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:backgroundTint="#F66B0E"
                android:onClick="Multiply"
                android:text="*"
                android:textSize="20dp"
                android:layout_row="1"
                android:layout_column="3"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"/>

            <Button
                android:id="@+id/buttonOne"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:backgroundTint="#7F8487"
                android:onClick="numOne"
                android:text="1"
                android:textSize="20dp"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"/>
            <Button
                android:id="@+id/buttonTwo"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:backgroundTint="#7F8487"
                android:onClick="numTwo"
                android:text="2"
                android:textSize="20dp"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"/>

            <Button
                android:id="@+id/buttonThree"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:backgroundTint="#7F8487"
                android:onClick="numThree"
                android:text="3"
                android:textSize="20dp"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"/>

            <Button
                android:id="@+id/buttonMinus"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:backgroundTint="#F66B0E"
                android:onClick="Minus"
                android:text="-"
                android:textSize="20dp"
                android:layout_row="2"
                android:layout_column="3"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"/>

            <Button
                android:id="@+id/buttonDot"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:backgroundTint="#7F8487"
                android:onClick="Dot"
                android:text="."
                android:textSize="20dp"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"/>

            <Button
                android:id="@+id/buttonZero"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:backgroundTint="#7F8487"
                android:onClick="numZero"
                android:text="0"
                android:textSize="20dp"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"/>

            <Button
                android:id="@+id/buttonEquals"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:backgroundTint="#F66B0E"
                android:onClick="Equals"
                android:text="="
                android:textSize="20dp"
                android:layout_row="3"
                android:layout_column="2"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"/>

            <Button
                android:id="@+id/buttonPlus"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:backgroundTint="#F66B0E"
                android:onClick="Plus"
                android:text="+"
                android:textSize="20dp"
                android:layout_row="3"
                android:layout_column="3"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"/>

        </GridLayout>

    </LinearLayout>

</RelativeLayout>